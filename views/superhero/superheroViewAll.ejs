<%- include("../includes/header.ejs", {title:"Superhero - View All"}); %>
<h1>Superheroes</h1>
<a href="/superhero/add">Add New Superhero</a> <br />

<br />

<table border="1">
    <tr><th>Name</th><th>Secret Identity</th><th>Weakness</th><th>Superpower</th><th>Arch-Enemy</th><th>Love Interest</th><th>Gender</th><th>Sidekick</th>
        <th>Wears a Cape?</th><th>Place of Origin</th><th>Original Author</th><th>Brand</th><th>Publication Year</th><th>Action</th></tr>
    <% for(var i=0; result.length > i; i++ ) { %>
    <tr>
        <td><a href="/superhero/?super_id=<%= result[i].super_id %>"><%= result[i].super_name %></a></td>
        <td><%= result[i].secret_identity %></td>
        <td><%= result[i].weakness %></td>
        <td><%= result[i].superpower %></td>
        <td><%= result[i].villain_name%></td>
        <td><%= result[i].love_interest %></td>
        <td><%= result[i].gender %></td>
        <td><%= result[i].sidekick %></td>
        <td><%= result[i].cape %></td>
        <td><%= result[i].planet_name%></td>
        <td><%= result[i].original_author%></td>
        <td><%= result[i].brand_name%></td>
        <td><%= result[i].publication_year%></td>
        <td>
            <button onclick="event.preventDefault();window.location.href='/superhero/edit2/?super_id=<%= result[i].super_id %>'">Edit</button>
            <form action="/superhero/delete/" style="display:inline;">
                <input type="hidden" name="super_id" id="super_id" value="<%= result[i].super_id %>" />
                <input type="submit" value="Delete"/>
            </form>

        </td>
    </tr>
    <% } %>
</table>
<br />
